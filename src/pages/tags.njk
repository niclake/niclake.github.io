---
permalink: /tags
title: Tags
---

<div id="tags">
{% for tag in collections.post | getAllTags | filterTagList | sort %}
  <h3 id="{{ tag | slugify }}" class="category-head">{{ tag }}</h3>
  <ul class="no-list-style">
    {% for post in collections[ tag ] | reverse %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <span class="post-date">{{ post.data.date | postDate }}</span>
      </li>
    {% endfor %}
  </ul>
{% endfor %}
</div>
