<div class="blog-post mb-3">
  <h5 class="post-title">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </h5>
  {% if post.data.description %}
    <span class="post-excerpt">{{ post.data.description }}</span>
  {% endif %}
  <div class="date">
    {{ post.date | postDateNoYear }}
    {% for category in post.data.categories %}
    â€¢ <a href="/categories#{{ category | slugify }}">{{ category | replace("-", " ") }}</a>
    {% endfor %}
  </div>
</div>
