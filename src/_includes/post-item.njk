<div class="blog-post mb-3">
  <h5 class="post-title">
    <a href="{{ post.url }}">
      {% if post.data.draft %}***[DRAFT] {% endif %}{{ post.data.title }}
    </a>
  </h5>
  {% if post.data.description %}
    <span class="post-excerpt">{{ post.data.description }}</span>
  {% endif %}
  <div class="date">
    {{ post.date | postDateNoYear }} â€¢
    {% for tag in post.data.tags | filterTagList %}
    <a class="post-tag" href="/blog/tags#{{ tag | slugify }}">#{{ tag }}</a>&nbsp;
    {% endfor %}
  </div>
</div>
