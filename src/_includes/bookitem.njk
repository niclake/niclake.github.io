<div class="col-lg-2 col-md-3 col-sm-4 col-4 d-flex align-items-stretch">
  <div class="w-100 catalog book">
    <div>
      <a href="{{ book.url }}" target="_blank" rel="noopener noreferrer">
        <img loading="lazy" src="{{ book.imageUrl }}" alt="{{ book.title }}">
      </a>
    </div>
    {% if book.rating != null or book.rating != null %}
      <div class="mt-auto">
        {{ book.lastRead }}<br />
        {% if book.rating != "" %}{{ book.rating }}{% else %}&nbsp;{% endif %}
      </div>
    {% endif %}
  </div>
</div>