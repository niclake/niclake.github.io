<div class="col-lg-3 col-md-4 col-sm-6 d-flex align-items-stretch">
  <div class="w-100 catalog book">
    <div>
      {% set bookshop_base = "https://bookshop.org/a/109783/" %}
      <a href="{{ bookshop_base }}{{ book.isbn }}">
      {% if book.cover == "Manual" %}
        <img src="/assets/images/bookcover.png" alt="{{ book.title | safe }}">
      {% elif book.cover %}
        <img src="https://covers.openlibrary.org/b/id/{{ book.cover }}-M.jpg" alt="{{ book.title | safe }}">
      {% else %}
        <img src="/assets/images/bookcover.png" alt="{{ book.title | safe }}">
      {% endif %}
      </a>
    </div>
    <div class="mt-auto">
      <h6><a href="{{ bookshop_base }}{{ book.isbn }}">{{ book.title | safe }}</a></h6>
      <p>by {{ book.authorFirst }} {{ book.authorLast }}
      {% if book.rating != "" %}<br/>{{ book.rating }}{% endif %}
      <br/>
      {{ book.compDate }}
      </p>
    </div>
  </div>
</div>